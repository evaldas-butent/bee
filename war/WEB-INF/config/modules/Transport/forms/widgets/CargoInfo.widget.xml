<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE FlowPanel [
  <!ENTITY section "margin-top: 4px;">
  <!ENTITY separator "<hr/>">
  <!ENTITY inline "display:inline-block;">
  <!ENTITY labelLeft "&inline; width:100px; padding-top:1px;">
  <!ENTITY labelRight "&inline; width:60px; padding-top:1px; text-align:right; margin-right:10px;">
  <!ENTITY input "&inline; width:110px;">
  <!ENTITY inp "&inline; width:170px;">
]>
<FlowPanel xmlns="http://www.butent.com/widget"
           xmlns:ui="http://www.butent.com/ui"
>
  <FlowPanel style="&section;">
    <Label text="=route" class="bee-required" style="&labelLeft; vertical-align:top;" />
    <InputArea source="OrderNotes" required="true" visibleLines="6" style="width:400px;" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="LoadedKilometers" text="=trAssessmentPlannedKm" style="&labelLeft;" />
    <InputInteger source="LoadedKilometers" style="&inline; width:70px;" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label text="=cargoLoading" style="font-weight: bold; &inline; width:150px; margin-left:100px;" />
    <Label text="=unloading" style="font-weight: bold; &labelLeft; margin-left:70px;" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="LoadingDate" text="=date" style="&labelLeft;" />
    <InputDateTime source="LoadingDate" style="&inp;" />
    <Label text="=date" class="bee-required" style="&labelRight; width:80px;" />
    <InputDateTime source="UnloadingDate" style="&inp;" required="true" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label text="=country" class="bee-required" style="&labelLeft;" />
    <FlowPanel style="&inline; width:190px;">
      <DataSelector source="LoadingCountry" style="&inp;" required="true" >
        <renderToken source="LoadingCountryName" />
        <renderToken source="LoadingCountryCode" prefix=" (" suffix=")" />
        <selectorColumn source="Name" />
        <selectorColumn source="Code">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
      <Flag source="LoadingCountryCode" style="&inline; padding-left:2px;" />
    </FlowPanel>
    <Label text="=country" class="bee-required" style="&labelRight;" />
    <FlowPanel style="&inline; width:190px;">
      <DataSelector source="UnloadingCountry" style="&inp;" required="true" >
        <renderToken source="UnloadingCountryName" />
        <renderToken source="UnloadingCountryCode" prefix=" (" suffix=")" />
        <selectorColumn source="Name" />
        <selectorColumn source="Code">
          <ui:renderer type="flag" />
        </selectorColumn>
      </DataSelector>
      <Flag source="UnloadingCountryCode" style="&inline; padding-left:2px;" />
    </FlowPanel>
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="LoadingCity" text="=city" style="&labelLeft;" />
    <DataSelector source="LoadingCity" style="&inp; margin-right:20px;" />
    <Label for="UnloadingCity" text="=city" style="&labelRight;" />
    <DataSelector source="UnloadingCity" style="&inp;" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="LoadingAddress" text="=address" style="&labelLeft;" />
    <InputText source="LoadingAddress" style="&inp; margin-right:20px;" />
    <Label for="UnloadingAddress" text="=address" style="&labelRight;" />
    <InputText source="UnloadingAddress" style="&inp;" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="LoadingPostIndex" text="=postIndex" style="&labelLeft;" />
    <InputText source="LoadingPostIndex" style="&inp;" />
    <Label for="UnloadingPostIndex" text="=postIndex" style="&labelRight; width:80px;" />
    <InputText source="UnloadingPostIndex" style="&inp;" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="LoadingCompany" text="=company" style="&labelLeft;" />
    <InputText source="LoadingCompany" style="&inp; margin-right:20px;" />
    <Label for="UnloadingCompany" text="=company" style="&labelRight;" />
    <InputText source="UnloadingCompany" style="&inp;" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="LoadingContact" text="=contact" style="&labelLeft;" />
    <InputText source="LoadingContact" style="&inp; margin-right:20px;" />
    <Label for="UnloadingContact" text="=contact" style="&labelRight;" />
    <InputText source="UnloadingContact" style="&inp;" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="CargoNotes" text="=additionalInfo" style="&labelLeft; vertical-align:top;" />
    <InputArea source="CargoNotes" style="width:400px;" />
  </FlowPanel>

  <Disclosure>
    <Summary text="=trAdditionalHandlingPlaces" />
    <ChildGrid name="CargoHandling" relColumn="Cargo" source="Cargo" summarize="true"
               caption="-" style="height:200px;" />
  </Disclosure>

  &separator;
  <FlowPanel style="&section;">
    <Label text="=cargo" class="bee-hasDefaults bee-required" style="&labelLeft; vertical-align:top;" />
    <InputArea source="Description" visibleLines="4" style="width:200px;" />
    <VerticalPanel style="&inline;">
      <CheckBox source="Partial" text="=partialCargo" />
      <CheckBox source="Outsized" text="=outsized" />
      <CheckBox source="Dangerous" text="=dangerous" />
    </VerticalPanel>
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="Quantity" style="&labelLeft;" />
    <InputDecimal source="Quantity" format="#.00" style="&input;" />
    <DataSelector source="QuantityUnit" style="&inline; width:5em; margin-left:5px;" editEnabled="false" />
    <Label for="Weight" style="&labelRight;" />
    <InputDecimal source="Weight" format="#.000" style="&input;" />
    <DataSelector source="WeightUnit" style="&inline; width:5em; margin-left:5px;" editEnabled="false" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <Label for="Volume" style="&labelLeft;" />
    <InputDecimal source="Volume" format="#.000" style="&input;" />
    <DataSelector source="VolumeUnit" style="&inline; width:5em; margin-left:5px;" editEnabled="false" />
    <Label for="Value" style="&labelRight;" />
    <InputMoney source="Value" style="&input;" currencySource="ValueCurrency" />
    <DataSelector source="ValueCurrency" style="&inline; width:5em; margin-left:5px;" editEnabled="false" />
  </FlowPanel>

  <FlowPanel style="&section;">
    <CheckBox source="CustomsBrokerage" />
    <CheckBox source="FreightInsurance" style="padding-left:130px;" />
  </FlowPanel>
</FlowPanel>
