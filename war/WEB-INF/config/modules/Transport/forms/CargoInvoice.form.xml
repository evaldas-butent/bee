<?xml version="1.0" encoding="UTF-8"?>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"
        xmlns:xi="http://www.w3.org/2001/XInclude"

  name="CargoInvoice" caption="=trdInvoice" showRowId="true"
  width="800" height="600" readOnly="true"
  >
  <f:properties jasperReports="long*CargoInvoice_en:=trdInvoice+ +LT/EN,
    long*CargoInvoice_ru:=trdInvoice+ +LT/RU, short*CargoInvoice_en:=trBriefInvoice+ +LT/EN,
    short*CargoInvoice_ru:=trBriefInvoice+ +LT/RU" />

  <FlowPanel class="flexBox-vertical">
    <br />
    <xi:include href="widgets/SaleInvoice.widget.xml" />
    <br />

    <TabbedPages class="flexible">
      <page>
        <text>=productsServices</text>
        <ChildGrid name="SaleItems" relColumn="Sale" disablable="false" />
      </page>
      <page>
        <text>=trdNotes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1" summarize="true" disablable="false" />
        </SimplePanel>
      </page>
      <page>
        <text>=files</text>
        <ChildGrid name="SaleFiles" relColumn="Sale" />
      </page>
      <page module="Transport">
        <text>=transportIncomes</text>
        <ChildGrid name="CargoSales" relColumn="Sale" />
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
