<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inp "width: 15em;">
]>
<f:Form
  xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"

  name="OrderInvoice" viewName="Sales" caption="=trdInvoice" showRowId="true"
  width="840" height="600" readOnly="true">
  <f:properties jasperReports="PrintInvoice:=trdInvoice, PrintInvoice_ee:=trdInvoice+_EE,
  PrintProforma:=trdProformaInvoice, PrintProforma_ee:=trdProformaInvoice+_EE,
  PrintTransportationAct:=printInvoiceBoL, PrintTransportationAct_ee:=printInvoiceBoL+_EE" />
  <FlowPanel class="flexBox-vertical">
    <br />
    <Table kind="controls">
      <col index="0" kind="label" />
      <col index="2" kind="label" />
      <col index="4" kind="label" />

      <row>
        <Label for="Date" />
        <InputDateTime source="Date" visible="true" />
      </row>

      <row>
        <Label for="SaleSeries" />
        <DataSelector source="SaleSeries" upperCase="true" name="Series"
          style="width: 7em;" disablable="false" />

        <Label for="InvoiceNo" />
        <InputText source="InvoiceNo" />
      </row>
      <row>
        <Label for="Term" />
        <InputDate source="Term" style="width: 10em;" />

        <Label text="=trdTotal" />
        <DecimalLabel source="Amount" format="0.00"
          style="font-weight: bold;" />

        <Label for="Currency" />
        <DataSelector source="Currency" renderColumns="CurrencyName"
          style="width: 50px;" editEnabled="false" newRowEnabled="false" />
      </row>

      <row>
        <Label for="Operation" />
        <DataSelector source="Operation" style="&inp;" renderColumns="OperationName" />

        <Label for="WarehouseFrom" />
        <DataSelector source="WarehouseFrom" style="&inp;"
          readOnly="true" />
      </row>

      <row>
        <Label for="Supplier" />
        <DataSelector source="Supplier" style="&inp;" />

        <Label for="Customer" />
        <DataSelector source="Customer" required="true"
          visible="true" style="&inp;" renderColumns="CustomerName" />
      </row>

      <row>
        <Label for="Manager" />
        <DataSelector source="Manager" editSource="ManagerPerson"
          renderColumns="ManagerFirstName ManagerLastName" style="&inp;" />

        <Label for="Payer" />
        <DataSelector source="Payer" style="&inp;" />
      </row>
    </Table>

    <br />

    <TabbedPages class="flexible">
      <page>
        <text>=goods</text>
        <ChildGrid name="SaleItems" relColumn="Sale" />
      </page>

      <page>
        <text>=ordTransportationActInfo</text>
        <SimplePanel>
          <Table kind="controls">
            <col index="0" kind="label" />
            <col index="2" kind="label" />

            <row>
              <Label for="Loading" />
              <InputText source="Loading" style="&inp;" disablable="false" />

              <Label for="Issued" />
              <InputText source="Issued" style="&inp;" disablable="false" />
            </row>

            <row>
              <Label for="Unloading" />
              <InputText source="Unloading" style="&inp;" disablable="false" />

              <Label for="DriverInfo" />
              <InputText source="DriverInfo" style="&inp;" disablable="false" />
            </row>
          </Table>
        </SimplePanel>
      </page>

      <page>
        <text>=trdNotes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1"
            summarize="true" />
        </SimplePanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
