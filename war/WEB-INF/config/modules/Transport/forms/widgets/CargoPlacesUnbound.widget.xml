<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
    <!ENTITY lbl1 "width:115px; text-align:right; margin-right:5px;">
    <!ENTITY inline "display:inline;">
    <!ENTITY inp "width:150px;">
    ]>
<FlowPanel xmlns="http://www.butent.com/widget" xmlns:ui="http://www.butent.com/ui">
  <Table kind="controls">
    <row>
      <cell colSpan="2" style="padding-top:0;">
        <Label text="=loading" horizontalAlignment="center" style="font-weight:bold;" />
      </cell>
      <cell colSpan="2" style="padding-top:0;">
        <Label text="=unloading" horizontalAlignment="center" style="font-weight:bold;" />
      </cell>
    </row>
    <row>
      <Label text="=date" style="&lbl1;" class="bee-required" />
      <InputDateTime source="LoadingDate" style="&inp;" required="true" />
      <Label text="=date" style="&lbl1;" class="bee-required" />
      <InputDateTime source="UnloadingDate" style="&inp;" required="true" />
    </row>
    <row>
      <Label text="=company" style="&lbl1;" />
      <InputText source="LoadingCompany" autocompleteKey="cargo-place-company" />
      <Label text="=company" style="&lbl1;" />
      <InputText source="UnloadingCompany" autocompleteKey="cargo-place-company" />
    </row>
    <row>
      <Label text="=address" style="&lbl1;" class="bee-required" />
      <InputText source="LoadingAddress" autocompleteKey="cargo-place-address" required="true" />
      <Label text="=address" style="&lbl1;" class="bee-required" />
      <InputText source="UnloadingAddress" autocompleteKey="cargo-place-address" required="true" />
    </row>
    <row>
      <Label text="=city" style="&lbl1;" class="bee-required" />
      <UnboundSelector name="LoadingCity" viewName="Cities" valueSource="Name"
                       choiceColumns="Name NameEn NameRu CountryName" required="true" >
        <ui:rowRenderer type="join" separator="/" />
      </UnboundSelector>
      <Label text="=city" style="&lbl1;" class="bee-required" />
      <UnboundSelector name="UnloadingCity" viewName="Cities" valueSource="Name"
                       choiceColumns="Name NameEn NameRu CountryName" required="true" >
        <ui:rowRenderer type="join" separator="/" />
      </UnboundSelector>
    </row>
    <row>
      <Label text="=postIndex" style="&lbl1;" class="bee-required" />
      <InputText source="LoadingPostIndex" style="&inp;"
                 autocompleteKey="cargo-place-postal-code" required="true" />
      <Label text="=postIndex" style="&lbl1;" class="bee-required" />
      <InputText source="UnloadingPostIndex" style="&inp;"
                 autocompleteKey="cargo-place-postal-code" required="true" />
    </row>
    <row>
      <Label text="=country" style="&lbl1;" class="bee-required" />
      <UnboundSelector name="LoadingCountry" viewName="Countries" valueSource="Name"
                       required="true" choiceColumns="Name NameEn NameRu"  >
        <ui:rowRenderer type="join" separator="/" />
      </UnboundSelector>
      <Label text="=country" style="&lbl1;" class="bee-required" />
      <UnboundSelector name="UnloadingCountry" viewName="Countries" valueSource="Name"
                       required="true" choiceColumns="Name NameEn NameRu"  >
        <ui:rowRenderer type="join" separator="/" />
      </UnboundSelector>
    </row>
    <row>
      <Label text="=personContact" style="&lbl1;" />
      <InputText source="LoadingContact" autocompleteKey="cargo-place-contact" />
      <Label text="=personContact" style="&lbl1;" />
      <InputText source="UnloadingContact" autocompleteKey="cargo-place-contact" />
    </row>
    <row>
      <Label text="=ref" style="&lbl1;" />
      <InputText source="LoadingNumber" />
      <Label text="=ref" style="&lbl1;" />
      <InputText source="UnloadingNumber" />
    </row>
    <row>
      <cell style="vertical-align:top;">
        <Label text="=note" style="&lbl1;" />
      </cell>
      <InputArea source="LoadingNote" visibleLines="2" />
      <cell style="vertical-align:top;">
        <Label text="=note" style="&lbl1;" />
      </cell>
      <InputArea source="UnloadingNote" visibleLines="2" />
    </row>
  </Table>
</FlowPanel>
