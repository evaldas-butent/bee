<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY section "margin-top: 5px;">
  <!ENTITY bold "font-weight:bold;">
  <!ENTITY form "PrintTradeActSalePhysical">
  <!ENTITY hdr ".bee-form-PrintTradeActSalePhysical .bee-trade-itemsInfo-header .bee-trade-itemsInfo-">
]>
<f:Form xmlns="http://www.butent.com/widget" xmlns:f="http://www.butent.com/form" xmlns:ui="http://www.butent.com/ui"
  name="&form;" caption="Perdavimo aktas" disabledActions="save" width="70" widthUnit="%" height="90" heightUnit="%">
  <FlowPanel style="padding: 10px; background-color: white; font-size:12px;" contentEditable="true"
    class="bee-PrintableForm bee-form-TradeActPrint">
    <Table kind="output" style="width:15cm">
      <row>
        <Image url="images/logo.png" style="width:6cm;" />
        <FlowPanel style="padding: 10px; width:9cm;">
          <TextLabel style="text-align: center; &bold; ">
            <render>
              <ui:expression>'Įrenginių perdavimo aktas Nr. ' + row.SeriesName + '-' + (row.Number ?
                row.Number :
                rowId)</ui:expression>
            </render>
          </TextLabel>
          <DateTimeLabel source="Date" format="DATE_TIME_SHORT" style="text-align: center;" />
        </FlowPanel>
      </row>
    </Table>

    <FlowPanel style="margin-top:12px;">
      <Table style="width:100%; border:1px solid black;" kind="output">
        <row>
          <cell style="vertical-align:top; width: 60%">
            <Label html="Nuomotojas" style="font-weight: bold; margin-left:10px;" />
          </cell>
          <cell style="vertical-align:top; width: 40%">
            <Label html="Nuomininkas" style="font-weight: bold;" />
          </cell>
        </row>
        <row style="vertical-align: top">
          <FlowPanel class="flexBox-vertical">
            <FlowPanel name="Supplier" style="margin-left:10px;" />
            <TextLabel source="Manager" style="margin-left:10px;">
              <renderToken source="ManagerFirstName" prefix="Atsakingas asmuo: " />
              <renderToken source="ManagerLastName" />
              <renderToken source="ManagerMobile" prefix=" Mob.: " />
            </TextLabel>
          </FlowPanel>
          <FlowPanel class="flexBox-vertical">
            <FlowPanel name="Company" />
            <TextLabel source="Contract" style="border-left: 1px solid black;">
              <renderToken source="ContractName" />
              <renderToken source="ContractNumber" />
            </TextLabel>
            <TextLabel source="Object">
              <renderToken source="ObjectName" prefix="Objektas: " />
              <renderToken source="ObjectAddress" />
            </TextLabel>
            <TextLabel source="Contact">
              <renderToken source="ContactFirstName" prefix="Atsakingas asmuo: " />
              <renderToken source="ContactLastName" />
              <renderToken source="ContactMobile" prefix=" Mob.: " />
            </TextLabel>
          </FlowPanel>
        </row>
      </Table>
    </FlowPanel>
    <TextLabel source="ActName" style="text-align:center; &bold; padding-top: 10px; padding-bottom: 10px;" />
    <FlowPanel name="TradeActItems" class="TradeActItems" style="&section; " />
    <br />
    <FlowPanel name="TradeActServices" class="TradeActServices" style="&section; " />

    <FlowPanel style="&section;">
      <TextLabel source="Notes" style="display:block; white-space:pre-wrap; border:1px solid silver;
        margin-top: 20px; min-height: 2em;">
        <dynStyle>
          <ui:inline>display: none;</ui:inline>
          <ui:expression>!row.Notes</ui:expression>
        </dynStyle>
        <renderToken source="Notes" prefix="Pastabos: " />
      </TextLabel>
    </FlowPanel>

    <Table style="width:100%; margin-top:10px;" kind="output">
      <row>
        <TextLabel source="Manager">
          <renderToken source="ManagerFirstName" prefix="Perdavė: " />
          <renderToken source="ManagerLastName" />
        </TextLabel>
        <FlowPanel class="flexBox-horizontal">
          <TextLabel source="InputVehicle">
            <dynStyle>
              <ui:inline>display: none;</ui:inline>
              <ui:expression>!row.InputVehicle</ui:expression>
            </dynStyle>
            <renderToken source="VehicleName" prefix="Transporto priemonė: " />
          </TextLabel>
          <TextLabel source="Vehicle">
            <dynStyle>
              <ui:inline>display: none;</ui:inline>
              <ui:expression>row.InputVehicle</ui:expression>
            </dynStyle>
            <renderToken source="VehicleModel" prefix="Transporto priemonė: " />
            <renderToken source="VehicleNumber" />
          </TextLabel>
        </FlowPanel>
      </row>
      <row>
       <br />
        <FlowPanel class="flexBox-horizontal">
          <TextLabel source="InputDriver">
            <dynStyle>
              <ui:inline>display: none;</ui:inline>
              <ui:expression>!row.InputDriver</ui:expression>
            </dynStyle>
            <renderToken source="DriverFirstName1" prefix="Vairuotojas: " />
            <renderToken source="DriverLastName1" />
          </TextLabel>
          <TextLabel source="Driver">
            <dynStyle>
              <ui:inline>display: none;</ui:inline>
              <ui:expression>row.InputDriver</ui:expression>
            </dynStyle>
            <renderToken source="DriverFirstName" prefix="Vairuotojas: " />
            <renderToken source="DriverLastName" />
          </TextLabel>
        </FlowPanel>
      </row>
      <row>
        <br />
      </row>
      <row>
        <Label text="Priėmė ir suskaičiavo:" />
        <br />
      </row>
    </Table>
  </FlowPanel>
</f:Form>