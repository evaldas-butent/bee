<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form[
    <!ENTITY inpw "width: 16em;">
    <!ENTITY inpdt "width: 10em;">
    <!ENTITY inpsh "width: 10em;">
    ]>
<f:Form xmlns="http://www.butent.com/widget"
        xmlns:f="http://www.butent.com/form"
        xmlns:xi="http://www.w3.org/2001/XInclude"

        name="TradeDocument" viewName="TradeDocuments"
        caption="=trdDocument" showRowId="true"
        width="80" widthUnit="vw" height="60" heightUnit="vh"
>
  <FlowPanel class="flexBox-vertical">
    <br />
    <TabBar name="Phase" source="Phase" class="bee-trade-document-phase" />

    <br />
    <FlowPanel class="flexBox-horizontal-space-between">
      <Table kind="controls">
        <col index="0" kind="label" />
        <col index="2" kind="label" />
        <col index="4" kind="label" />

        <row>
          <Label for="Date" />
          <InputDateTime source="Date" style="&inpdt;" visible="true" />

          <Label for="Series" />
          <InputText source="Series" upperCase="true" style="width: &inpsh;" />

          <Label for="Number" />
          <InputText source="Number" style="&inpw;" />
        </row>

        <row>
          <Label for="Number1" />
          <InputText source="Number1" style="&inpw;" />

          <Label for="Number2" />
          <InputText source="Number2" style="&inpw;" />

          <Label text="=tags" />
          <ChildSelector childTable="TradeDocumentTags" viewName="TradeTags"
                         targetRelColumn="TradeDocument" sourceRelColumn="TradeTag"
                         renderColumns="TagName"
                         newRowEnabled="false" style="&inpw;" />
        </row>

        <row>
          <Label for="Operation" />
          <DataSelector name="Operation" source="Operation" renderColumns="OperationName"
                        newRowEnabled="false" style="&inpw;" visible="true" />

          <Label for="Status" />
          <DataSelector source="Status" renderColumns="StatusName" newRowEnabled="false"
                        style="&inpw;" />

          <Label for="Manager" />
          <DataSelector source="Manager" renderColumns="ManagerFirstName ManagerLastName"
                        newRowEnabled="false" style="&inpw;" />
        </row>

        <row>
          <Label for="Supplier" />
          <DataSelector source="Supplier" style="&inpw;" visible="true"
                        choiceColumns="Name TypeName"
                        renderColumns="SupplierName SupplierTypeName" />

          <Label for="Customer" />
          <DataSelector source="Customer" style="&inpw;" visible="true"
                        choiceColumns="Name TypeName"
                        renderColumns="CustomerName CustomerTypeName" />

          <Label for="Payer" />
          <DataSelector source="Payer" style="&inpw;" visible="true" choiceColumns="Name TypeName"
                        renderColumns="PayerName PayerTypeName" />
        </row>

        <row>
          <Label for="WarehouseFrom" />
          <DataSelector source="WarehouseFrom" style="&inpw;" visible="true"
                        choiceColumns="Code Name"
                        renderColumns="WarehouseFromCode WarehouseFromName" />

          <Label for="WarehouseTo" />
          <DataSelector source="WarehouseTo" style="&inpw;" visible="true" choiceColumns="Code Name"
                        renderColumns="WarehouseToCode WarehouseToName" />

          <Label for="Term" />
          <InputDateTime source="Term" style="&inpdt;" />
        </row>

        <row>
          <Label for="PriceName" />
          <ListBox source="PriceName" />

          <Label for="DocumentDiscount" />
          <InputDecimal source="DocumentDiscount" style="&inpsh;" />

          <Label for="Currency" />
          <DataSelector source="Currency" renderColumns="CurrencyName" editEnabled="false"
                        newRowEnabled="false" style="width: 5em;" />
        </row>

        <row>
          <Label for="DocumentVatMode" />
          <ListBox source="DocumentVatMode" />

          <Label for="DocumentDiscountMode" />
          <ListBox source="DocumentDiscountMode" />
        </row>
      </Table>

      <Table kind="controls">
        <col index="0" kind="label" />

        <row>
          <Label text="=amount" />
          <MoneyLabel name="TdAmount" />
        </row>
        <row>
          <Label text="=discount" />
          <MoneyLabel name="TdDiscount" />
        </row>
        <row>
          <Label text="=withoutVat" />
          <MoneyLabel name="TdWithoutVat" />
        </row>
        <row>
          <Label text="=vat" />
          <MoneyLabel name="TdVat" />
        </row>
        <row>
          <Label text="=total" />
          <MoneyLabel name="TdTotal" />
        </row>
      </Table>
    </FlowPanel>

    <br />
    <TabbedPages class="flexible" style="min-height: 240px;">
      <page>
        <text>=goods</text>
        <ChildGrid name="TradeDocumentItems" relColumn="TradeDocument" />
      </page>

      <page data="Dimensions">
        <text>=dimensions</text>
        <xi:include href="../../Administration/forms/widgets/ExtraDimensions.widget.xml" />
      </page>

      <page>
        <text>=files</text>
        <ChildGrid name="TradeDocumentFiles" relColumn="TradeDocument" />
      </page>

      <page>
        <text>=notes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1" summarize="true" />
        </SimplePanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
