<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE SplitPanel [
  <!ENTITY flbl "margin-bottom: 1px;">
  <!ENTITY mrcl "flexBox-horizontal-top">
  <!ENTITY mrst "margin-top: 0.5vh;margin-right: 1em;">
  <!ENTITY mfld "margin-left: 1em; min-width: 5em;">
  <!ENTITY finp "width: 100&#37;">
]>
<SplitPanel xmlns="http://www.butent.com/widget" splitterSize="4" name="MainInfoSplit" style="position: initial;">
  <east size="400">
    <FlowPanel class="bee-svc-contact-panel">
      <FlowPanel class="&mrcl;" style="&mrst;" for="State">
        <FlowPanel style="&mfld;width: 30em;">
          <Label for="State" style="&flbl;" />
          <DataSelector source="State" style="width:50%"/>
          <CheckBox source="ExportWebsite" style="margin-left:20px" />
        </FlowPanel>
      </FlowPanel>
      <FlowPanel class="&mrcl;" style="&mrst;" for="Customer">
        <FlowPanel style="&mfld;&finp;width: 41em;" >
          <Label text="=svcUser" style="&flbl;" />
          <DataSelector name="Customer" source="Customer" renderColumns="CustomerName"
                        style="&finp;"/>
        </FlowPanel>
      </FlowPanel>

      <FlowPanel class="&mrcl;" style="&mrst;" for="ContactPerson">
        <FlowPanel style="&mfld;width: 20em;">
          <Label text="=contact" style="&flbl;" />
          <DataSelector name="ContactPerson" source="ContactPerson" options="Customer"
                        choiceColumns="FirstName LastName Mobile Email Address CompanyName"
                        renderColumns="ContactFirstName ContactLastName"
                        style="&finp;"/>
        </FlowPanel>

        <FlowPanel  style="&mfld;width: 20em;" for="Object">
          <Label for="Object" style="&flbl;" />
          <DataSelector source="Object" options="Customer"
                        choiceColumns="CompanyName ObjectName ObjectAddress"
                        renderColumns="ObjectName ObjectAddress"
                        style="&finp;" />
        </FlowPanel>
      </FlowPanel>

      <FlowPanel class="&mrcl;" style="&mrst;" for="ContactPerson">
        <FlowPanel  style="&mfld;width: 20em;">
          <Label text="=mobile" style="&flbl;" />
          <DataSelector source="ContactPerson" options="Customer"
                        choiceColumns="FirstName LastName Mobile Email Address CompanyName"
                        renderColumns="ContactMobile"
                        style="&finp;"/>
        </FlowPanel>

        <FlowPanel style="&mfld;width: 20em;" for="ContactPerson">
          <Label text="=email" style="&flbl;" />
          <DataSelector source="ContactPerson" options="Customer"
                        choiceColumns="FirstName LastName Mobile Email Address CompanyName"
                        renderColumns="ContactEmail"
                        style="&finp;"/>
        </FlowPanel>
      </FlowPanel>

      <FlowPanel style="&mrst;">
        <FlowPanel style="&mfld;" for="Contractor">
          <Label for="Contractor" style="&flbl;" />
          <DataSelector source="Contractor" viewName="Companies" renderColumns="ContractorName"
                        style="&finp;"/>
        </FlowPanel>
      </FlowPanel>

      <FlowPanel >
        <ChildGrid name="ServicePlace" relColumn="Item" source="Item" style="&mrst;" />
      </FlowPanel>
    </FlowPanel>
  </east>

  <center>
    <FlowPanel class="bee-svc-contact-panel">
      <FlowPanel class="&mrcl;" style="&mrst;">
        <FlowPanel style="&mfld; width: 39em;" for="Category">
          <Label for="Category" style="&flbl;" />
          <DataSelector source="Category" viewName="ServiceTree" renderColumns="CategoryName"
                        choiceColumns="ParentName Name" style="&finp;"/>
        </FlowPanel>

        <FlowPanel style="&mfld; width: 17em;" for="Item">
          <Label for="Item" style="&flbl;" />
          <DataSelector source="Item" viewName="Items" searchableColumns="Name Article" style="&finp;"/>
        </FlowPanel>

        <FlowPanel style="margin-left: 1em; margin-top: 2em;">
          <FaLabel name="NewItem" class = "bee-Relations-newRel" char="plus_circle" title="=newItem"/>
        </FlowPanel>
      </FlowPanel>

      <FlowPanel class="&mrcl;" style="&mrst;">
        <FlowPanel style="&mfld; width: 19em;" for="Model">
          <Label for="Model" style="&flbl;" />
          <InputText source="Model" style="&finp;" />
        </FlowPanel>

        <FlowPanel style="&mfld; width: 20em;" for="ServiceManufacturer">
          <Label for="ServiceManufacturer" style="&flbl;" />
          <DataSelector source="ServiceManufacturer" renderColumns="ManufacturerName" choiceColumns="ManufacturerName" filter="Visible"
                        style="&finp;"/>
        </FlowPanel>

        <FlowPanel style="&mfld; width: 20em; display:none" for="SerialNo">
          <Label for="SerialNo" style="&flbl;" />
          <InputText source="SerialNo" style="&finp;" />
        </FlowPanel>
      </FlowPanel>

      <FlowPanel class="&mrcl;" style="&mrst;">
        <FlowPanel style="&mfld; width: 19em;" for="AcquireDate">
          <Label for="AcquireDate" style="&flbl;" />
          <InputDate source="AcquireDate" style="&finp;" />
        </FlowPanel>

        <FlowPanel style="&mfld; width: 41em;" for="Address">
          <Label for="Address" style="&flbl;" />
          <InputText source="Address" style="&finp;" />
        </FlowPanel>
      </FlowPanel>
<!-- Transrifus { -->
      <FlowPanel class="&mrcl;" style="&mrst;">
        <FlowPanel style="&mfld; width: 19em;" for="YearOfManufacture">
          <Label for="YearOfManufacture" style="&flbl;" />
          <InputText source="YearOfManufacture" style="&finp;" />
        </FlowPanel>

        <FlowPanel style="&mfld; width: 20em;" for="InventNo">
          <Label for="InventNo" style="&flbl;" />
          <InputText source="InventNo" style="&finp;"/>
        </FlowPanel>

        <FlowPanel style="&mfld; width: 20em;" for="BodyNo">
          <Label for="BodyNo" style="&flbl;" />
          <InputText source="BodyNo" style="&finp;" />
        </FlowPanel>
      </FlowPanel>

      <FlowPanel class="&mrcl;" style="&mrst;">
        <FlowPanel style="&mfld; width: 40em;" for="Seller">
          <Label for="Seller" style="&flbl;" />
          <InputText source="Seller" style="&finp;"/>
        </FlowPanel>

        <FlowPanel style="&mfld; width: 20em;" for="ItemInButenta">
          <Label for="ItemInButenta" style="&flbl;" />
          <InputText source="ItemInButenta" style="&finp;" />
        </FlowPanel>
      </FlowPanel>
      <!-- } Transrifus -->
    </FlowPanel>
  </center>
</SplitPanel>

