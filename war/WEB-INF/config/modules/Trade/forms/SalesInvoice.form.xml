<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form [
  <!ENTITY inp "width: 15em;">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"

  name="SalesInvoice" viewName="Sales"
  caption="=trdInvoice" showRowId="true"
  width="840" height="600"
  >
  <f:properties reports="PrintTransrifusSalesInvoice" jasperReports="SalesInvoice_lt" />
  <FlowPanel class="flexBox-vertical">
    <br/>
    <Table kind="controls">
      <col index="0" kind="label" />
      <col index="2" kind="label" />
      <col index="4" kind="label" />

      <row>
        <Label for="Date" />
        <InputDateTime source="Date" visible="true" />

        <Label for="SaleSeries" />
        <DataSelector source="SaleSeries" renderColumns="SeriesName"
                      upperCase="true" style="width: 7em;" />
        <Label for="InvoiceNo" />
        <InputText source="InvoiceNo" />
      </row>

      <row>
        <Label for="Term" />
        <InputDate source="Term" style="width: 10em;" />

        <Label text="=trdTotal" />
        <DecimalLabel source="Amount" format="0.00" style="font-weight: bold;" />

        <Label for="Currency" />
        <DataSelector source="Currency" renderColumns="CurrencyName"
          style="width: 50px;" editEnabled="false" newRowEnabled="false" />
      </row>

      <row>
        <Label for="Supplier" />
        <DataSelector source="Supplier" name="Supplier" style="&inp;"/>

        <Label for="Customer" class="bee-required" />
        <DataSelector source="Customer" name="Customer" required="true" visible="true"
                      style="&inp;" renderColumns="CustomerName CustomerTypeName" />

        <CheckBox for="IsSentToEmail" source="IsSentToEmail" readOnly="true"/>
      </row>

      <row>
        <Label for="Manager" />
        <DataSelector source="Manager" editSource="ManagerPerson"
          renderColumns="ManagerFirstName ManagerLastName" style="&inp;" />

        <Label for="Payer" />
        <DataSelector source="Payer" name="Payer" style="&inp;"/>

        <Label for="InvoiceTransferType" />
        <DataSelector source="InvoiceTransferType" style="&inp;"/>
      </row>

      <row>
        <Label for="Operation" />
        <DataSelector source="Operation"/>

        <Label for="WarehouseFrom" />
        <DataSelector source="WarehouseFrom" style="&inp;"/>
      </row>
    </Table>

    <br/>

    <TabbedPages class="flexible">
      <page>
        <text>=productsServices</text>
        <ChildGrid name="SaleItems" relColumn="Sale" />
      </page>

      <page >
        <text>=tradeActs</text>
        <ChildGrid name="InvoiceTradeActs" relColumn="Sale" module="Trade.Acts" />
      </page>

      <page>
        <text>=trdNotes</text>
        <SimplePanel>
          <InputArea source="Notes" class="occupy-1" summarize="true" />
        </SimplePanel>
      </page>
      <page>
        <text>=files</text>
        <ChildGrid relColumn="Sale" name="SaleFiles" />
      </page>
    </TabbedPages>
  </FlowPanel>

  <f:rowEditable>
    <ui:expression>!row.Exported</ui:expression>
  </f:rowEditable>
</f:Form>
