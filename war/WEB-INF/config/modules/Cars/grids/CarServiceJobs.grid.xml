<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
        xmlns:ui="http://www.butent.com/ui"

        name="CarServiceJobs" viewName="CarServiceJobs" autoFlex="true"
>
  <g:columns>
    <RelColumn name="Job" renderColumns="JobName" flexGrow="2" visible="true" readOnly="true"
               caching="none" />
    <DataColumn name="Code" flexGrow="1" />

    <DataColumn name="Duration">
      <editor type="time" stepValue="5" />
    </DataColumn>
    <DataColumn name="Quantity" scale="0" visible="true" />

    <DataColumn name="Completed" label="=ordCompleted" visible="true" >
      <style>
        <bodyStyle>
          <ui:inline>color: green; font-weight: bold;</ui:inline>
        </bodyStyle>
      </style>

      <render>
        <ui:function>
          if (row.Completed){
          return row.Completed;
          } else {
          return 0;
          }
        </ui:function>
      </render>
    </DataColumn>

    <CalcColumn name="Uncompleted" type="double" label="=ordUncompleted" visible="true" >
      <style>
        <bodyStyle>
          <ui:inline>color: blue; font-weight: bold;</ui:inline>
        </bodyStyle>
      </style>

      <render>
        <ui:expression>row.Quantity - row.Completed</ui:expression>
      </render>
    </CalcColumn>

    <DataColumn name="Price" scale="2" />
    <DataColumn name="Discount" scale="0">
      <editor type="number" percentageTag="DiscountIsPercent" />
    </DataColumn>
    <DataColumn name="DiscountIsPercent" width="20" sortable="false" format="%" />

    <DataColumn name="Vat" scale="0" carry="true">
      <editor type="number" percentageTag="VatIsPercent" />
    </DataColumn>
    <DataColumn name="VatIsPercent" width="20" sortable="false" format="%" carry="true" />

    <CalcColumn name="Total" type="decimal" caption="=total" scale="2">
      <style>
        <bodyStyle>
          <ui:font>bold</ui:font>
        </bodyStyle>
      </style>
      <renderer type="total" />
    </CalcColumn>
  </g:columns>
</g:Grid>
