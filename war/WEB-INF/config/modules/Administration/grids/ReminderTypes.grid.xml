<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"

  name="ReminderTypes" viewName="ReminderTypes"
  caption="=reminderTypes" newRowCaption="=newReminderType"
  flexGrow="1" flexShrink="1"
  >
  <g:body height="60" />
  
  <g:columns>
    <DataColumn name="Name" caption="=name" visible="true" />
    <DataColumn name="Method" caption="=reminderMethod" visible="true" />

    <DataColumn name="Module" caption="=reminderModule" visible="true" />
    <DataColumn name="ReminderDateField" caption="=reminderDateField" visible="true" />
    <DataColumn name="ReminderDateIndicator" caption="=reminderDateIndicator" visible="true" />


    <DataColumn name="Hours" caption="=unitHours" />
    <DataColumn name="Minutes" caption="=unitMinutes" />

    <DataColumn name="Caption" caption="=reminderCaption" required="true"/>
    <DataColumn name="Template" caption="=reminderTemplate" minWidth="200" whiteSpace="pre-wrap"
                required="true"/>
    
    <DataColumn name="Description" caption="=description" whiteSpace="pre-wrap" />
  </g:columns>
</g:Grid>
