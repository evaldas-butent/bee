<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Form[
  <!ENTITY inpw "width: 200px;">
  <!ENTITY inpdt "width: 10em;">
  <!ENTITY forparent "<dynStyle><ui:inline>display: none;</ui:inline><ui:expression>!row.Parent</ui:expression></dynStyle>">
  <!ENTITY forRegistrationNo "<dynStyle><ui:inline>display: none;</ui:inline><ui:expression>row.Kind != 2</ui:expression></dynStyle>">
  <!ENTITY forOperation
          "<dynStyle><ui:inline>display: none;</ui:inline><ui:expression>row.Kind == 7 </ui:expression></dynStyle>">
]>
<f:Form xmlns="http://www.butent.com/widget"
  xmlns:f="http://www.butent.com/form"
  xmlns:ui="http://www.butent.com/ui"

  name="TradeAct" viewName="TradeActs"
  caption="=tradeAct" showRowId="true"
  width="1050" height="700"
  >
  <f:properties reports="PrintTradeActSalePhysical, PrintTradeActReturn, PrintTASaleNoStock,
     PrintTASaleRent, PrintTASaleAddition, PrintTASaleSuggestion, PrintTASaleProforma" />

  <FlowPanel>
    <br />
    <Table kind="controls">
      <col index="0" kind="label" />
      <col index="2" kind="label" />

      <row class="bee-ta-template-selection" data="TradeActTemplates">
        <Label text="=template" />
        <UnboundSelector viewName="TradeActTemplates" choiceColumns="Template"
          newRowEnabled="false" style="&inpw;" />
      </row>

      <row>
        <Label name="labelName" for="Name" visible="true" class="bee-required" />
        <DataSelector source="Name" style="&inpw;" visible="true" />

        <Label for="Parent">
          &forparent;
        </Label>
        <LongLabel source="Parent" class="bee-output" style="width: 120px;">
          &forparent;
        </LongLabel>
      </row>

      <row>
       <Label text="=trdContract" />
       <DataSelector name="Contract" source="Contract" style="&inpw;"
         renderColumns="ContractName ContractNumber"
         choiceColumns="Name Number DocumentDate Expires StatusName"
         viewName="Documents"
         caching="none" module="Documents" newRowEnabled="false" />
      </row>

      <row>
        <Label for="Date" name="labelDate" visible="true" />
        <InputDateTime source="Date" style="&inpdt;" visible="true" />

        <Label for="Until" class="bee-ta-until-label" name="labelUntil" />
        <InputDateTime source="Until" name="Until" class="bee-ta-until-input" style="&inpdt;" />
      </row>

      <row>
        <Label for="Series" class="bee-required" />
        <DataSelector source="Series" newRowEnabled="false" style="width: &inpdt;" required="true" />

        <Label name="labelNumber" for="Number" visible="true" />
        <InputText source="Number" style="&inpw;" visible="true" />
      </row>

      <row>
        <Label for="Operation" class="bee-required" >
          &forOperation;
        </Label>
        <DataSelector source="Operation" renderColumns="OperationName" newRowEnabled="false"
          style="&inpw;" required="true">
          &forOperation;
        </DataSelector>

        <Label for="Status" name="labelStatus" />
        <DataSelector source="Status" renderColumns="StatusName" newRowEnabled="false"
          style="&inpw;" />
      </row>

      <row>
        <Label for="Company" visible="true" class="bee-required" />
        <DataSelector source="Company" name="Company" style="&inpw;" visible="true" choiceColumns="Name TypeName"
          renderColumns="CompanyName TypeName" required="true" />

        <Label for="Object" name="labelObject" />
        <DataSelector source="Object" name="Object" renderColumns="ObjectName"
          choiceColumns="CompanyName TypeName ObjectName ObjectAddress" newRowEnabled="true" newRowForm="CompanyObject"
          style="&inpw;" />
      </row>

      <row>
        <Label for="Contact" name="labelContact" >
          <dynStyle>
            <ui:class>bee-required</ui:class>
            <ui:expression>!row.ContactPhysical</ui:expression>
          </dynStyle>
        </Label>
        <DataSelector source="Contact" newRowEnabled="true" style="&inpw;"
          renderColumns="ContactFirstName ContactLastName"
          choiceColumns="FirstName LastName CompanyName" options="Company" />

        <Label for="Manager" />
        <DataSelector source="Manager" editSource="ManagerPerson"
          renderColumns="ManagerFirstName ManagerLastName" newRowEnabled="false" style="&inpw;" />
      </row>

      <row>
        <Label for="Vehicle" name="labelVehicle" />
        <DataSelector source="InputVehicle" renderColumns="VehicleName InputVehicleNotes"
          newRowEnabled="true" style="&inpw;" />
        <Label for="Driver" name="labelDriver" />
        <DataSelector source="InputDriver" renderColumns="DriverFirstName1 DriverLastName1 InputDriverNotes"
          newRowEnabled="true" style="&inpw;" />
      </row>

      <!-- @DEPRECATED By Transrifus {
      <row>
        <FlowPanel/>
        <DataSelector source="Vehicle"
          renderColumns="VehicleParentModel VehicleModel VehicleNumber" newRowEnabled="true"
          style="&inpw;" />
        <FlowPanel/>
        <DataSelector source="Driver" renderColumns="DriverFirstName DriverLastName"
          newRowEnabled="true" style="&inpw;" />
      </row>
      }-->

      <row>
        <Label for="Currency" />
        <DataSelector source="Currency" renderColumns="CurrencyName" editEnabled="false"
          newRowEnabled="false" style="width: 60px;" />

        <Label for="RegistrationNo" class="bee-required">
          &forRegistrationNo;
        </Label>
        <InputText source="RegistrationNo" style="&inpw;" visible="true" >
          &forRegistrationNo;
        </InputText>
      </row>
    </Table>

    <br />
    <TabbedPages style="height: 1200px;">
      <page>
        <text>=goods</text>
        <ChildGrid name="TradeActItems" relColumn="TradeAct" />
      </page>

      <page class="bee-ta-services-tab">
        <text>=services</text>
        <ChildGrid name="TradeActServices" relColumn="TradeAct" />
      </page>

      <page class="bee-ta-invoices-tab">
        <text>=trdInvoices</text>
        <ChildGrid name="TradeActInvoices" relColumn="TradeAct" />
      </page>

      <page>
        <text>=files</text>
        <ChildGrid name="TradeActFiles" relColumn="TradeAct" />
      </page>

      <page>
        <text>=notes</text>
        <FlowPanel class="flexBox-vertical">
          <br />
          <HorizontalPanel data="TradeNotes">
            <cell kind="label">
              <Label text="=trdNoteTemplate" />
            </cell>
            <UnboundSelector viewName="TradeNotes" choiceColumns="Name"
              newRowEnabled="false" style="&inpw;" />
          </HorizontalPanel>

          <br />
          <SimplePanel class="flexible" style="position: relative;">
            <InputArea source="Notes" class="occupy-1" summarize="true" />
          </SimplePanel>
        </FlowPanel>
      </page>
    </TabbedPages>
  </FlowPanel>
</f:Form>
