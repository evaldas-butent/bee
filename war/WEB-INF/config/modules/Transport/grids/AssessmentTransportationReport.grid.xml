<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
        xmlns:xi="http://www.w3.org/2001/XInclude"

        name="AssessmentTransportationReport" viewName="AssessmentTransportationReport"
        caption="=carriersReport" flexGrow="1" readOnly="true"
>
  <g:columns>
    <RelColumn name="Assessment" label="=trAssessment" editEnabled="true"
               editViewName="Assessments" editSource="Assessment" module="Transport.Logistics" />

    <DataColumn name="OrderNotes" minWidth="100" whiteSpace="nowrap" />
  </g:columns>

  <xi:include href="columns/Places.columns.xml" />

  <g:columns>
    <DataColumn name="Description" minWidth="100" whiteSpace="nowrap" />

    <DataColumn name="Weight" />
    <DataColumn name="WeightUnitName" />
    <DataColumn name="Volume" />
    <DataColumn name="VolumeUnitName" />
    <DataColumn name="Quantity" />
    <DataColumn name="QuantityUnitName" />

    <DataColumn name="CustomerName" />
    <DataColumn name="Partial" caption="=partialShort" width="15" sortable="false" />

    <RelColumn name="Purchase" caption="=trdPurchaseId"
               editEnabled="true" editForm="CargoPurchaseInvoice"
               editViewName="CargoPurchaseInvoices">
      <renderToken source="InvoicePrefix" />
      <renderToken source="InvoiceNo" />
    </RelColumn>

    <DataColumn name="Amount" />
    <DataColumn name="CurrencyName" />

    <DataColumn name="ForwarderName" />
    <DataColumn name="TransportationPrice" />
    <DataColumn name="TransportationCurrencyName" />
  </g:columns>
</g:Grid>
