<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  
  name="EcCatalog" viewName="TcdArticles" caption="=ecCatalog"
  editShowId="true" disabledActions="export" editInPlace="true"
  >
  <g:columns>
    <IdColumn name="Id" width="60" />
    <DataColumn name="ArticleName" visible="true" />
    <DataColumn name="ArticleNr" visible="true" />
    <DataColumn name="BrandName" />

    <DataColumn name="UnitName" />
    <DataColumn name="Weight" />

    <DataColumn name="Visible" />

    <DataColumn name="Novelty" />
    <DataColumn name="Featured" />
    <DataColumn name="FeaturedPrice" />
    <DataColumn name="FeaturedPercent" />

    <DataColumn name="Description" visible="false" />

    <PropColumn name="Remainder" type="double" dynamic="true" />
    <PropColumn name="Cost" type="decimal" scale="2" caption="=ecItemCost" dynamic="true" />
    <PropColumn name="SupplierID" type="string" caption="=code" dynamic="true" />
  </g:columns>
</g:Grid>
