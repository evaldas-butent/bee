<?xml version="1.0" encoding="UTF-8"?>
<g:Grid xmlns="http://www.butent.com/column" xmlns:g="http://www.butent.com/grid"
  
  name="TodoList" viewName="TodoList" caption="=crmTodoList"
  newRowWindow="modal" editWindow="modal"
  filter="Creator={u} or Visibility = 0"
  >
  <g:columns>
    <DataColumn name="Summary" minWidth="120" visible="true" />
    <DataColumn name="Description" visible="false" />

    <RelColumn name="Company" minWidth="100" />
    <RelColumn name="Contact" visible="false" />

    <DataColumn name="StartTime" />
    <DataColumn name="FinishTime" />

    <DataColumn name="ExpectedDuration" visible="false" />

    <DataColumn name="Created" />
    <RelColumn name="Creator" />
  </g:columns>
</g:Grid>
