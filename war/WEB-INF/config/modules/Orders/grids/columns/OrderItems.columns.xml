<?xml version="1.0" encoding="UTF-8"?>
<g:columns xmlns="http://www.butent.com/column"
           xmlns:g="http://www.butent.com/grid"
           xmlns:ui="http://www.butent.com/ui">

  <RelColumn name="Item" renderColumns="ItemName" choiceColumns="Name Article" filter="!(IsService)"
             editPopup="true" visible="true" readOnly="true">
    <dynStyle>
      <ui:inline>color: #ff5252; font-weight: bold;</ui:inline>
      <ui:expression>((row.Quantity - row.CompletedInvoices - row.ResRemainder) &gt; row.FreeRemainder
        &amp;&amp; row.ItemComponent &lt; 1) || row.EmptyRemainder &gt; 0</ui:expression>
    </dynStyle>
    <footer text="=totalOf" horizontalAlignment="right" />
  </RelColumn>

  <DataColumn name="Article" />

  <DataColumn name="Quantity" visible="true" scale="3" >
    <footer aggregate="sum" />
    <editable>
      <ui:expression>row.Quantity != row.CompletedInvoices</ui:expression>
    </editable>
  </DataColumn>

  <DataColumn name="UnitName" caption="=unitShort" flexGrow="0" />

  <PropColumn name="FreeRemainder" type="double" label="=ordFreeRemainder" visible="true" />

  <DataColumn name="ResRemainder" scale="3" >
    <editable>
      <ui:expression>
        row.Quantity != row.CompletedInvoices &amp;&amp; row.ItemComponent &lt; 1
      </ui:expression>
    </editable>
  </DataColumn>

  <PropColumn name="CompletedInvoices" type="double" label="=ordCompleted" visible="true">
    <style>
      <bodyStyle>
        <ui:inline>color: green; font-weight: bold;</ui:inline>
      </bodyStyle>
    </style>
  </PropColumn>


  <CalcColumn name="Uncompleted" type="double" label="=ordUncompleted">
    <style>
      <bodyStyle>
        <ui:inline>color: blue; font-weight: bold;</ui:inline>
      </bodyStyle>
    </style>

    <render>
      <ui:expression>row.Quantity - row.CompletedInvoices</ui:expression>
    </render>
  </CalcColumn>

  <DataColumn name="ItemCost">
    <dynStyle>
      <ui:inline>background-color: #ff5252</ui:inline>
      <ui:expression>row.ItemCost &gt; (row.AmountWoVAT / row.Quantity)</ui:expression>
    </dynStyle>
  </DataColumn>

  <DataColumn name="Price" visible="true">
    <footer expression="row.Quantity * row.Price" />
    <editable>
      <ui:expression>row.ItemComponent &lt; 1</ui:expression>
    </editable>
  </DataColumn>

  <CalcColumn name="ItemPrices" type="string" cellType="html" label="=taItemPrices" width="100"
              exportable="false" verticalAlignment="middle" readOnly="true">

  </CalcColumn>

  <CalcColumn name="UnitPrice" type="double" label="=unitPrice" format="0.00000">
    <render>
      <ui:expression>row.Price - row.Price * row.Discount / 100 </ui:expression>
    </render>
  </CalcColumn>

  <DataColumn name="Discount">
    <footer evaluator="discount" scale="2" />
    <editable>
      <ui:expression>row.ItemComponent &lt; 1</ui:expression>
    </editable>
  </DataColumn>

  <DataColumn name="VatPlus" width="20" sortable="false" caption="+" format="+" carry="true" >
    <editable>
      <ui:expression>row.ItemComponent &lt; 1</ui:expression>
    </editable>
  </DataColumn>

  <DataColumn name="Vat" carry="true" flexGrow="0">
    <footer evaluator="vat" />
    <editable>
      <ui:expression>row.ItemComponent &lt; 1</ui:expression>
    </editable>
  </DataColumn>

  <DataColumn name="VatPercent" width="20" sortable="false" caption="%" format="%" carry="true" >
    <editable>
      <ui:expression>row.ItemComponent &lt; 1</ui:expression>
    </editable>
  </DataColumn>

  <PropColumn name="AmountWoVAT" type="double" label="=trdAmountWoVat" scale="2" format="0.00"/>

  <CalcColumn name="Total" type="decimal" caption="=trdAmount" scale="2">
    <style>
      <bodyStyle>
        <ui:font>bold</ui:font>
      </bodyStyle>
    </style>
    <renderer type="total" />
    <footer aggregate="sum" />
  </CalcColumn>

  <DataColumn name="Unpacking" readOnly="true">
    <footer aggregate="sum" />
  </DataColumn>

  <RelColumn name="Supplier" newRowEnabled="false" caching="query" choiceColumns="Name TypeName"
             renderColumns="SupplierName SupplierTypeName">
    <editable>
      <ui:expression>row.ItemComponent &lt; 1</ui:expression>
    </editable>
  </RelColumn>

  <DataColumn name="SupplierTerm" />
  <DataColumn name="Note" />
</g:columns>