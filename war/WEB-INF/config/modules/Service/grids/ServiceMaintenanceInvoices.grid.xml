  name="ServiceMaintenanceInvoices" viewName="OrderChildInvoices" flexGrow="1" disabledActions="add"
  caption="=trdInvoices" filter="!(Proforma) AND (Kind 1 OR ServiceMaintenance)" >
  <xi:include href="../../Orders/grids/columns/Invoices.columns.xml" />
  <g:columns>
    <RelColumn name="ServiceMaintenance" viewName="ServiceMaintenance" renderColumns="MaintenanceNumber" filterSupplier="value"
               editPopup="true" label="=svcRepair"/>
  </g:columns>

  <g:rowStyle>
    <ui:inline>="color:red"</ui:inline>
    <ui:expression>row.Debt &gt; 0 &amp;&amp; row.Term &lt; new Date().getTime()</ui:expression>
